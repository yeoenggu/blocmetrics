<div class="row">
  <div id="errors-explanation" class="col-xs-12">
    <% flash.each do |name, msg| %>
      <% if name == "notice" %>
        <% name = "success" %>
      <% end %>
      <%= content_tag :div, class: "alert alert-dismissible alert-#{name}" do %>
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= msg %>
      <% end %> 
    <% end %>
  </div>
</div><!-- end row -->