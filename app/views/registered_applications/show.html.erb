<p id="notice"><%= notice %></p>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">
      Registered Application</h3>
    </div>
    
    <table class="table table-striped table-bordered table-hover">
      <thead>
      </thead>

      <tbody>

        <tr>
          <td> Name: </td>
          <td> <%= @registered_application.name %> </td>
        </tr>
        <tr>
          <td> ID: </td>
          <td> <%= @registered_application.id %> </td>
        </tr>
        <tr>
          <td> URL: </td>
          <td> <%= @registered_application.url %> </td>
        </tr>
      </tbody>
    </table>
</div>

<br>
 
 
<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"> Events</h3>
  </div>

  <div class="page-header">
    <h5>Pie chart</h5>
    <div class="well">
      <%= pie_chart @registered_application.events.group(:name).count %>
    </div>
    <h5>Line chart</h5>
    <div class="well">
      <%= line_chart @registered_application.events.group_by_day(:created_at).count %>
    </div>
  </div><!-- end of page-header -->
</div> <!-- end of panel -->

    
<%= link_to 'Edit', edit_registered_application_path(@registered_application) %> |
<%= link_to 'Back', registered_applications_path %>
